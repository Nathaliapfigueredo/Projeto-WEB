<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dashboard do Orientador</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
      padding-top: 60px;
    }

    .card {
      margin-bottom: 20px;
    }

    .btn-aceitar {
      background-color: #171440;
      color: white;
    }

    .btn-sugerir {
      background-color: #ffc107;
      color: black;
    }

    h1 {
      color: #171440;
      text-align: center;
      margin-bottom: 30px;
    }
  </style>
</head>
<body>

  <%- include('partials/header') %>

  <div class="container">
    <h1>Minhas Reuniões</h1>

<div class="row">
  <% reunioes.forEach(function(reuniao) { %>
    <div class="col-md-6">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Aluno: <%= reuniao.nome_aluno %></h5>
          <p><strong>Data:</strong> <%= reuniao.data %></p>
          <p><strong>Horário:</strong> <%= reuniao.horario %></p>
          <p><strong>Status:</strong> <%= reuniao.status %></p>

          <form action="/api/reuniao/<%= reuniao.id %>/aceitar" method="POST" class="d-inline">
            <button class="btn btn-success">Aceitar</button>
          </form>
          <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalSugerir<%= reuniao.id %>">Sugerir outro horário</button>
        </div>
      </div>
    </div>

    <div class="modal fade" id="modalSugerir<%= reuniao.id %>" tabindex="-1">
      <div class="modal-dialog">
        <form class="modal-content" action="/api/reuniao/<%= reuniao.id %>/sugerir" method="POST">
          <div class="modal-header">
            <h5 class="modal-title">Sugerir novo horário</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label class="form-label">Nova Data</label>
              <input type="date" name="nova_data" class="form-control" required />
            </div>
            <div class="mb-3">
              <label class="form-label">Novo Horário</label>
              <input type="time" name="novo_horario" class="form-control" required />
            </div>
          </div>
          <div class="modal-footer">
            <button class="btn btn-primary" type="submit">Enviar sugestão</button>
          </div>
        </form>
      </div>
    </div>
  <% }) %>
</div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
  </html>
