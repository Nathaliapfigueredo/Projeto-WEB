<form action="/sessao" method="POST">
  <input type="hidden" name="id_orientador" value="<%= orientador.id %>">
  <input type="hidden" name="id_aluno" value="<%= aluno.id %>"> 

  <div class="mb-3">
    <label for="agendamento_data" class="form-label">Data</label>
    <input type="date" class="form-control" id="agendamento_data" name="agendamento_data" required>
  </div>

  <div class="mb-3">
    <label for="agendamento_hora" class="form-label">Hora</label>
    <input type="time" class="form-control" id="agendamento_hora" name="agendamento_hora" required>
  </div>

  <div class="mb-3">
    <label for="topico" class="form-label">Tópico</label>
    <input type="text" class="form-control" id="topico" name="topico" required>
  </div>

  <div class="mb-3">
    <label for="external_link" class="form-label">Link da Reunião (opcional)</label>
    <input type="url" class="form-control" id="external_link" name="external_link">
  </div>

  <input type="hidden" name="status" value="agendada">

  <button type="submit" class="btn btn-primary">Confirmar Agendamento</button>
</form>
