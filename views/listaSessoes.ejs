<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Sessões Agendadas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f7f7f7;
      color: #333;
    }

    h1, h2 {
      padding-top: 40px;
      color: #171440;
    }

    .custom-table {
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .table th, .table td {
      vertical-align: middle;
    }

    .table thead.table-dark th {
      background-color: #171440;
    }

    .status-badge {
      padding: 5px 10px;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: bold;
    }

    .status-agendada {
      background-color: #ecac40;
      color: white;
    }

    .status-realizada {
      background-color: #28a745;
      color: white;
    }

    .status-cancelada {
      background-color: #dc3545;
      color: white;
    }

    .link-reuniao a {
      color: #0d6efd;
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <div class="container my-5">
    <h1 class="mb-4 text-center">Sessões Agendadas</h1>

    <% if (sessoes && sessoes.length > 0) { %>
      <div class="table-responsive custom-table">
        <table class="table table-striped table-bordered mb-5">
          <thead class="table-dark">
            <tr>
              <th>Data</th>
              <th>Horário</th>
              <th>Orientador</th>
              <th>Status</th>
              <th>Link da Reunião</th>
            </tr>
          </thead>
          <tbody>
            <% sessoes.forEach(function(sessao) { %>
              <% console.log(sessao); %>
              <tr>
                <td><%= sessao.data %></td>
                <td><%= sessao.horario %></td>
                <td><%= sessao.orientador %></td>
                <td>
                  <span class="status-badge status-<%= sessao.status.toLowerCase() %>">
                    <%= sessao.status %>
                  </span>
                </td>
                <td class="link-reuniao text-center">
                <% if (sessao.external_link) { %>
                    <a href="<%= sessao.external_link %>" target="_blank" class="btn select-button btn-sm">Acessar</a>
                <% } else { %>
                    <span class="text-muted">Não informado</span>
                <% } %>
                </td>

              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-center">Você não possui sessões agendadas.</p>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
