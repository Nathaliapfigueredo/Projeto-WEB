<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Sessões Agendadas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h1 class="mb-4 text-center">Sessões Agendadas</h1>
        <% if (sessoes && sessoes.length > 0) { %>
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Data</th>
                        <th>Horário</th>
                        <th>Professor</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% sessoes.forEach(function(sessao) { %>
                        <tr>
                            <td><%= sessao.data %></td>
                            <td><%= sessao.horario %></td>
                            <td><%= sessao.professor %></td>
                            <td><%= sessao.status %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">Você não possui sessões agendadas.</p>
        <% } %>
    </div>

    
    <% if (sessoes && sessoes.length > 0) { %>
    <div class="mb-4">
        <h2 class="text-center">Suas Reuniões Agendadas</h2>
        <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
            <th>Data</th>
            <th>Horário</th>
            <th>Professor</th>
            <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% sessoes.forEach(function(sessao) { %>
            <tr>
                <td><%= sessao.data %></td>
                <td><%= sessao.horario %></td>
                <td><%= sessao.professor %></td>
                <td><%= sessao.status %></td>
            </tr>
            <% }); %>
        </tbody>
        </table>
    </div>
    <% } %>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>