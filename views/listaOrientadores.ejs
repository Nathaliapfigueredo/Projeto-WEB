<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Lista de Orientadores</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .card {
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 16px;
      margin-bottom: 16px;
    }
    .card h2 {
      margin-top: 0;
    }
    .select-button {
      background-color: #007bff;
      color: white;
      padding: 8px 16px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    .select-button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>

  <h1>Escolha seu Orientador</h1>

  <% if (orientadores.length > 0) { %>
    <% orientadores.forEach(orientador => { %>
      <div class="card">
        <h2><%= orientador.nome %></h2>
        <p><strong>Email:</strong> <%= orientador.email %></p>
        <p><strong>Bio:</strong> <%= orientador.bio || "Bio não disponível" %></p>

        <form action="/api/aluno/vincular-orientador" method="POST">
          <input type="hidden" name="id_orientador" value="<%= orientador.id %>">
          <button type="submit" class="select-button">Selecionar este orientador</button>
        </form>
      </div>
    <% }) %>
  <% } else { %>
    <p>Não há orientadores cadastrados no momento.</p>
  <% } %>

</body>
</html>
